.contact-us
	position relative
	padding-top 163px
	padding-bottom 163px
	padding-top 0
	padding-bottom 0
	// min-height 1010px
	// background #FFF

	&__w
		position absolute
		position static
		margin auto
		margin-top 170px
		margin-bottom 170px
		left 50%
		max-width 416px
		width 100%
		text-align center
		transform translateX(-50%)
		transform none
	&__image
		margin-bottom 90px
		img
			max-width 100%
			height auto
	&__title
		margin-bottom 44px
		color #1c1c1c
		font-size 24px
		font-weight 500
		letter-spacing 1px
	&__text
		margin-bottom 60px
		color #313131
		font-size 24px
		font-weight 400
		letter-spacing 1px
		line-height 1.375

	&__link
		max-width 270px
		width 100%


