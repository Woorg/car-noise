.nav
	&__list
		display flex
		flex-wrap wrap
		// +rmin($tM)
		// 	flex-wrap nowrap
	&__item
		position relative
		margin-right 63px

		&:after
			position absolute
			top 50%
			right -28px
			content ''
			retinaSprite($arrow_group)
			transform translateY(-50%)
		&:last-child
			margin-right 0
			&:after
				display none

	&__item_active
		.nav__link
			&:after
				opacity 1


	&__link
		position relative
		padding-bottom 2px
		color #616161
		font-family $m
		font-size 15px
		font-weight 500
		letter-spacing 0.1px
		text-transform uppercase
		text-decoration none
		+rmin($tM)
			padding-bottom 8px
		&:after
			position absolute
			top calc(100% - 1px)
			left 0
			width 100%
			content ''
			height 1px
			border-radius 2px
			background-color #0db6ff
			opacity 0
		&:hover
			&:after
				opacity .8


.nav_secondary
	.nav__list
		flex-wrap wrap
		+rmin($tM)
			flex-wrap nowrap
			justify-content flex-end
	.nav__item
		margin-right 10px
		margin-bottom 0

		+rmin($tM)
			margin-right 50px
		&:after
			display none
		&:last-child
			margin-right 0
	.nav__link
		padding-bottom 0px
		color #FFF
		font-size 18px
		font-weight 500
		text-transform none
		white-space nowrap
