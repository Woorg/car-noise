mixin form()
	.form&attributes(attributes)
		form(action="" method="post")
			.form__row
				.form__field
					label.form__label(for="email") Email
					input#email(type="text", value="", placeholder="")

				.form__field.form__field_select
					label.form__label(for="topic") Topic
					select#topic.form__select(name="")
						option(value="select-0") New data request
						option(value="select-1") List Option 1
						option(value="select-2") List Option 2
						option(value="select-3") List Option 3
						option(value="select-4") List Option 4

					.form__select New data request

					.form__select-list
						.form__select-item.form__select-item_active New data request
						.form__select-item List Option 1
						.form__select-item List Option 2
						.form__select-item List Option 3
						.form__select-item List Option 4

			.form__row
				.form__field.form__field_text
					label.form__label(for="message") Message
					textarea#message(name="")


			input.form__submit.button(type="submit" value="Send Messages")

