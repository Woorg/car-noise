mixin form-settings()
	.form.form_second&attributes(attributes)
		form(action="" method="post")
			.form__row
				.form__field.form__field_checkbox
					.form__label Units
					.form__checkbox
						input#checkbox-metric(type="radio", value="metric" name="units" checked)
						label.form__label(for="checkbox-metric") Metric

						input#checkbox-imperial(type="radio", value="imperial" name="units")
						label.form__label(for="checkbox-imperial") Imperial



			.form__row
				.form__field
					label.form__label(for="email") E-mail address
					input#email(type="text", value="", placeholder="johann92@gmail.com")

			.form__row
				.form__field.form__field_password
					label.form__label(for="password") Password
					input#password(type="password" value="123456" minlength="9" maxlength="12" autocomplete="current-password" required )

			.form__row
				.form__field.form__field_password
					label.form__label(for="confirm-password") Confirm password
					input#confirm-password(type="password" value="123456" minlength="9" maxlength="12" autocomplete="current-password" required )

			.form__row.form__row_bottom
				a.form__delete(href="#") Delete Account
				input.form__submit.button(type="submit" value="Save")




