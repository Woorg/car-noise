.form
	&__row
		margin-bottom 35px
		display flex
		justify-content space-between
		flex-wrap wrap
		// &:last-child
		// 	margin-bottom 0
	&__row_bottom
		margin-top 50px
		margin-bottom 0
		align-items center
	&__row_remember
		margin-bottom 0
		align-items center

	&__field
		position relative
		max-width 320px
		flex 0 1 320px
		display flex
		flex-direction column
		text-align left
		justify-content space-between
		label
			margin-bottom 9px
			color #333333
			font-size 14px
			font-weight 500
			letter-spacing 0.1px
		input
			padding-top 14px
			padding-right 15px
			padding-bottom 14px
			padding-left 15px
			width 100%
			border-radius 4px
			border 1px solid rgba(0, 0, 0, 0.1)
			+placeholder()
				color #2a2a2a
			// box-shadow 0 6px 10px rgba(67, 64, 64, 0.25)

	&__validation-text
		position absolute
		top 0
		right 0
		// display none
		font-family Montserrat
		font-size 16px
		font-weight 400

	&__field_error
		.form__validation-text
			display block
			color #ff2e49
	&__field_success
		.form__validation-text
			display block
			color green

	&__field_text
		max-width 100%
		flex 1 1 auto
		textarea
			padding-top 10px
			padding-right 15px
			padding-bottom 10px
			padding-left 15px
			min-height 128px
			border-radius 4px
			border 1px solid rgba(0, 0, 0, 0.1)
