	&__field_select
		select
			display none

		.form__select
			padding-left 30px
			padding-right 30px
			padding-top 14px
			padding-bottom 11px
			width 100%
			height 48px
			color #616161
			font-size 14px
			font-weight 500
			line-height 1.42
			border-radius 4px
			border 1px solid rgba(0, 0, 0, 0.1)
			cursor pointer

		.form__select-list
			border 1px solid rgba(0, 0, 0, 0.1)
			background-color #ffffff
			opacity 0
			visibility hidden
			height 0
			tr(all .3s ease)

		.form__select-item
			border-bottom 1px solid #f1f2f4
			padding-top 14px
			padding-left 90px
			padding-right 10px
			padding-bottom 12px
			cursor pointer
			&:hover
				background-color rgba(13, 182, 255, 0.1)
			&:last-child
				border-bottom none

		.form__select-item_active
			background-color rgba(13, 182, 255, 0.1)


	&__field_select-active

		.form__select
			padding-left 30px
			padding-right 30px
			padding-top 14px
			padding-bottom 11px
			width 100%
			height 48px
			color #616161
			font-size 14px
			font-weight 500
			line-height 1.42
			border-radius 4px
			border 1px solid rgba(0, 0, 0, 0.1)
			cursor pointer
			&:after
				bottom 2px
				transform translateY(-50%) rotate(180deg)

		.form__select-list
			position absolute
			top calc(100% + 1px)
			left 0
			width 100%

			z-index 1
			opacity 1
			visibility visible
			height auto
			tr(all .3s ease)

	&__field_password
		input
			padding-top 0
			padding-bottom 0
			font-size 30px
			font-weight normal
			height 50px
			line-height 1


	&__select
		position relative
		&:after
			position absolute
			bottom 2px
			right 13px
			content ''
			width 20px
			height 20px
			background url('../images/general/select-icon.png') 50% no-repeat
			cursor pointer
			pointer-events none
			transform translateY(-50%)

	// &__field_checkbox

	&__checkbox,
	&__radio
		margin-top 18px
		display flex
		input
			visuallyhidden()
			&:checked + label
				&:after,
				&:before
					width 14px
					height 14px
					border-radius 50%
					background-color #0db6ff

		.form__label
			position relative
			margin-right 96px
			padding-left 30px
			cursor pointer
			&:after,
			&:before
				position absolute
				top 50%
				left 0
				border 2px solid #0db6ff
				content ''
				width 14px
				height 14px
				border-radius 50%
				transform translateY(-50%)

	&__radio
		margin-top 0
		input
			visuallyhidden()
			&:checked + label
				&:after
					width 18px
					height 18px
					background #FFF
					border-radius 4px
					border 1px solid #b7b7b7
				&:before
					border none
					left 5px
					z-index 1
					width 10px
					height 10px
					background #0db6ff
					border-radius 2px

		.form__label
			position relative
			margin-right 0
			padding-left 30px
			&:after,
			&:before
				width 18px
				height 18px
				border-radius 4px
				border 1px solid #b7b7b7
			&:before
				border none


	&__submit-w
		width 100%
		text-align right

	&__submit
		margin-top 40px
		max-width 280px
		width 100%

	&__delete
		color #fe2042
		font-size 18px
		font-weight 500
		letter-spacing -0.05px
		line-height 1.6
		text-decoration none
		tr(color .3s ease)
		&:hover
			color darken(#fe2042, 10)
			tr(color .3s ease)


	&__note
		color #929699
		font-size 18px
		font-weight 400
		line-height 1.5

		&.form__note_second
			margin-top 0
			font-size 14px
			font-weight 400
			line-height 1.357

	&__note-link
		display block
		color #0db6ff
		font-weight 500
		text-decoration none

	&__text
		color #817f7f
		font-size 18px
		font-weight 500
		letter-spacing 1px

	&__login,
	&__forgot
		color #151515
		font-size 20px
		font-weight 500
		letter-spacing 1px
		text-decoration underline
		&:hover
			text-decoration none

	&__forgot
		color #000000
		font-size 18px
		font-weight 400

.form_second,
.form_third,
.form_fourth
	.form__row
		margin-bottom 22px
		&:first-child
			margin-bottom 42px
	.form__field
		max-width 400px
		flex 0 1 400px
	.form__label
		color #151515
		font-size 16px
		font-weight 500
		letter-spacing 0.89px
	.form__checkbox
		label
			color #2a2a2a
			font-size 14px
			font-weight 500
			line-height 1.42

	.form__submit
		margin-top 0
		padding-top 10px
		padding-bottom 12px
		max-width 160px
		height 50px
		font-size 20px
		letter-spacing .83px



.form_third,
.form_fourth
	.form__row
		margin-bottom 20px
		&:first-child
			margin-bottom 20px
		&:last-child
			margin-bottom 0
	.form__field
		label
			margin-bottom 14px
		input
			+placeholder()
				color #817f7f
				font-size 16px
				font-weight 400

	.form__note
		margin-top -10px

	.form__submit
		margin-top 30px
		max-width 160px


.form_fourth
	.form__text,
	.form__login
		font-weight normal
	.form__row_remember
		margin-bottom 0

	.form__radio
		.form__label
			color #929699
			font-size 18px
			font-weight 400
