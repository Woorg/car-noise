							input.filter__check-input(type="checkbox" value="" name="year")
							span.filter__check-text Diesel


			button.filter__more More



		.filter__block.filter__block_cars
			.filter__block-top
				.filter__block-title Cars


			.filter__block-graph
				img(src='assets/images/content/cars-graph.png', srcset='assets/images/content/cars-graph@2x.png 2x, assets/images/content/cars-graph@3x.png 3x' alt='')





