					+icon('close-icon', true).filter__close-icon
					//- svg.filter__close-icon(width='12', height='12', viewbox='0 0 12 12', fill='none', xmlns='http://www.w3.org/2000/svg')
						path(d='M1.41016 1L11.4102 11', stroke='#979797', stroke-width='1.08', stroke-miterlimit='50', stroke-linecap='round', stroke-linejoin='round')
						path(d='M11.4102 1L1.41016 11', stroke='#979797', stroke-width='1.08', stroke-miterlimit='50', stroke-linecap='round', stroke-linejoin='round')


			.filter__check-w
				.filter__check-col
