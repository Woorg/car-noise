.filter
	margin-right 30px
	margin-bottom 100px
	margin-left 30px
	padding-top 70px
	+r($tM)
		margin-left 10px
		margin-right 10px
	&__top
		border-bottom 1px solid #edeef4
		padding-bottom 32px
		display flex
		justify-content space-between
		font-weight 500
	&__title
		color #464855
		font-size 20px
		letter-spacing 1.67px
		line-height 1
		text-transform uppercase
	&__reset
		resetbutton()
		color #ff2e49
		font-size 14px
		letter-spacing .58px
		tr(color .3s ease)
		&:hover
			color darken(#ff2e49, 10)
			tr(color .3s ease)

	&__block
		border-bottom 1px solid #edeef4
		padding-top 36px
		padding-bottom 35px

	&__block_years
		.filter__check-col
			margin-right 23px

	&__block_class
		.filter__check-col
			margin-right 14px

	&__block_engine
		.filter__check-col
			margin-right 32px

	&__block_cars
		.filter__block-top
			margin-bottom 0
		.filter__block-title
			font-size 12px
			font-weight 400
			letter-spacing 0.5px



	&__block-top
		margin-bottom 28px
		display flex
		justify-content space-between
		align-items baseline

	&__block-title
		color #464855
		font-size 16px
		font-weight 400
		letter-spacing 1px
		text-transform uppercase

	&__block-graph
		margin-top 6px
		margin-bottom 60px
		text-align center
		img
			max-width 100%
			height auto
	&__close
		resetbutton()
		width 12px
		height 12px
		opacity 1
		tr(opacity .3s ease)
		&:hover
			opacity .8
			tr(opacity .3s ease)
	&__close-icon
		width 12px
		height 12px
		display block
	&__close-text
		visuallyhidden()

	&__check-w
		display flex

	&__check-col
		// max-width 80px
		// width 100%
		flex 1 1 auto
		&:last-child
			margin-right 0

	&__check
		margin-bottom 13px
		&:last-child
			margin-bottom 0
			display block

	&__check-label
		display flex
		align-items center
		cursor pointer

	.filter__check-input
		visuallyhidden()
		&:checked + span
			&:before
				z-index 1
				top 6px
				left 4px
				content ''
				width 9px
				height 9px
				background-color #0db6ff
				opacity 1
				tr(opacity .3s ease)


	&__check-text
		position relative
		padding-left 30px
		color #6b6f81
		font-size 12px
		font-weight 300
		letter-spacing 0.5px
		&:after,
		&:before
			position absolute
			top 50%
			left 0
			content ''
			transform translateY(-50%)
		&:after
			border 1px solid #e4e5ec
			width 15px
			height 15px
			background-color #ffffff
			box-shadow 0 2px 1px rgba(0, 0, 0, 0.03)


		&:before
			opacity 0
			tr(opacity .3s ease)

	&__less,
	&__add,
	&__more
		resetbutton()
		margin-top 14px
		color #6b6f81
		font-size 12px
		font-weight 300
		letter-spacing .5px

	&__add
		margin-top 0
		text-transform uppercase

	&__more
		text-align left

	&__select-w
		margin-top 30px
		display flex
		align-items center

	&__field-select
		position relative
		margin-right 13px
		flex 1 1 auto
		select
			display none

		.filter__select
			position relative
			padding-left 11px
			padding-right 30px
			padding-top 15px
			padding-bottom 11px
			width 100%
			height 46px
			color #6b6f81
			font-size 14px
			font-weight 400
			line-height 1
			border-radius 4px
			border 1px solid rgba(0, 0, 0, 0.1)
			cursor pointer
			&:after
				position absolute
				bottom 2px
				right 13px
				content ''
				width 20px
				height 20px
				background url('../images/general/select-icon.png') 50% no-repeat
				cursor pointer
				pointer-events none
				transform translateY(-50%)

		.filter__select-list
			border 1px solid rgba(0, 0, 0, 0.1)
			background-color #ffffff
			opacity 0
			visibility hidden
			height 0
			tr(all .3s ease)

		.filter__select-item
			border-bottom 1px solid #f1f2f4
			padding-top 14px
			padding-left 90px
			padding-right 10px
			padding-bottom 12px
			cursor pointer
			&:hover
				background-color rgba(13, 182, 255, 0.1)
			&:last-child
				border-bottom none

		.filter__select-item_active
			background-color rgba(13, 182, 255, 0.1)


	&__field-select_active

		.filter__select
			padding-left 30px
			padding-right 30px
			padding-top 14px
			padding-bottom 11px
			width 100%
			height 48px
			color #616161
			font-size 14px
			font-weight 500
			line-height 1.42
			border-radius 4px
			border 1px solid rgba(0, 0, 0, 0.1)
			cursor pointer
			&:after
				bottom 2px
				transform translateY(-50%) rotate(180deg)

		.filter__select-list
			position absolute
			top calc(100% + 1px)
			left 0
			width 100%

			z-index 1
			opacity 1
			visibility visible
			height auto
			tr(all .3s ease)
