.auth
	// position relative
	position absolute
	z-index 3
	top 50%
	right 15px
	
	margin-left auto
	// padding-top 160px
	// padding-bottom 106px
	max-width 400px
	width 100%
	


	transform translateY(-50%)

	&__title
		margin-bottom 44px
	&__google
		position relative
		margin-bottom 28px
		padding-top 14px
		padding-bottom 10px
		padding-left 67px
		display flex
		height 50px
		background-color #0db6ff
		font-size 20px
		font-weight 500
		letter-spacing 0.83px
		text-decoration none
		border-radius 4px
		tr(background-color .3s ease)
		&:hover
			background-color #009ee3
			tr(background-color .3s ease)
	&__google-icon
		position absolute
		top 0
		left 0
		width 67px
		height 50px
		border-radius 4px 0 0 4px
		background-color #009ee3
		svg
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)

	&__google-text
		padding-left 34px
		color #ffffff
		font-size 20px
		font-weight 500
		letter-spacing 0.83px
	&__sep
		margin-bottom 24px
		text-align center
		span
			position relative
			padding-left 24px
			padding-right 24px
			display inline-block
			vertical-align middle
			color #000000
			font-size 14px
			font-weight 400
			letter-spacing 0.78px
			text-transform uppercase
			line-height 1
			&:after,
			&:before
				position absolute
				top 50%
				width 130px
				height 1px
				content ''
				background #b7b7b7
			&:after
				right -130px

			&:before
				left -130px

	// &__form
